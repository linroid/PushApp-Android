<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <PreferenceCategory android:title="基本设置">
        <Preference
            android:key="@string/pref_bind_account"
            android:title="绑定账户"
            tools:summary="你是个好人啦" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="@string/pref_auto_install"
            android:title="下载后安装" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="@string/pref_auto_open"
            android:title="安装后打开" />
        <Preference
            android:key="@string/pref_accessibility_service"
            android:title="自动安装服务"
            android:summary="帮你自动点击安装界面的“安装”按钮，解放你的双手，请确保该服务处于开启状态。"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="关于">
        <Preference
            android:key="@string/pref_about_us"
            android:summary="你想知道的一切"
            android:title="关于我们" />
    </PreferenceCategory>

</PreferenceScreen>
